{
  "name": "close-quarters",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "rimraf dist/ && babel ./src --out-dir dist/ --copy-files --source-maps",
    "production-build": "export NODE_ENV=production && export DEBUG=false && npm run build && browserify -t [ envify --DEBUG false ] src/client.js | uglifyjs -c > dist/static/bundle.js",
    "start-dev": "export NODE_ENV=development && export DEBUG=true && npm run build && node dist/server.js & watchify src/client.js -t [ envify --DEBUG true ] -o dist/static/bundle.js -v",
    "start": "npm run build && node dist/server.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": [
            [
              "@babel/preset-env"
            ]
          ]
        }
      ]
    ]
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^4.17.1",
    "p5": "^1.0.0",
    "socket.io": "^2.3.0",
    "jsonwebtoken": "^8.5.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.1",
    "@babel/core": "^7.10.2",
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/plugin-transform-runtime": "^7.11.5",
    "@babel/preset-env": "^7.10.2",
    "babelify": "^10.0.0",
    "browserify": "^16.5.1",
    "envify": "^4.1.0",
    "rimraf": "^3.0.2",
    "uglify-js": "^3.10.1",
    "watchify": "^3.11.1"
  }
}
